# Database Configuration
DATABASE_URL=sqlite:///./data/highscore.db
# For PostgreSQL use: postgresql://user:password@localhost/highscore
# For MySQL use: mysql://user:password@localhost/highscore

# API Configuration
API_TITLE=HighScore API
API_VERSION=1.0.0
API_DESCRIPTION=Open-source leaderboard API for games

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=*

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Server (Coolify deployment on port 6400)
HOST=0.0.0.0
PORT=6400

# Security Features (true/false)
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_REQUEST_LOGGING=true
MAX_REQUEST_SIZE=1048576

# Rate Limiting Configuration
RATE_LIMIT_CREATE_GAME=5/hour
RATE_LIMIT_SUBMIT_SCORE=100/minute
RATE_LIMIT_GET_LEADERBOARD=60/minute
RATE_LIMIT_DEFAULT=100/minute

# API Key Settings
API_KEY_MIN_LENGTH=32
API_KEY_MAX_AGE_DAYS=365

# Input Validation Limits
MAX_PLAYER_NAME_LENGTH=50
MAX_GAME_NAME_LENGTH=100
MAX_DESCRIPTION_LENGTH=500
MAX_SCORE_VALUE=999999999
MAX_METADATA_SIZE=10240
